{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": ".",
    "baseUrl": "./"
  },
  "ts-node": {
    "swc": true,
    "esm": true
  },
  "include": [
    "src/",
    "scripts/",
    "typings/**/*",
    "test/",
    "./package.json",
    "src/**/*.json",
    "test/**/*.json",
    "jest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "src/workers/**/*", "src/app/**/*", "test/site/"]
}
