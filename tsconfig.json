{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "composite": false,
    "rootDir": ".",
    "baseUrl": "./",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "swc": true,
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", "test/**/*", "package.json"],
  "exclude": [
    "node_modules",
    "dist",
    "src/workers/**/*",
    "src/app/**/*",
    "test/site/**/*",
    "examples"
  ]
}
