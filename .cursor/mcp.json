{
  "mcpServers": {
    "promptfoo": {
      "command": "npm",
      "args": [
        "run",
        "local",
        "--",
        "mcp",
        "--transport",
        "stdio"
      ],
      "description": "Promptfoo MCP server for LLM evaluation and testing context",
      "env": {
        "PROMPTFOO_LOG_LEVEL": "debug",
        "PROMPTFOO_CONFIG_PATH": "${workspaceFolder}"
      }
    }
  }
}